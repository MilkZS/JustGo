<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#00BCD4">

            <TextView
                android:id="@+id/detail_text_view_summary_label"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="@string/design_text_view_summary_label" />

        </FrameLayout>

        <TextView
            android:id="@+id/detail_text_view_summary"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#00BCD4"
            android:layout_width="110dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/detail_text_view_content_label"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:text="@string/design_text_view_content_label" />
        </FrameLayout>

        <TextView
            android:id="@+id/detail_text_view_content"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

    </LinearLayout>
</ScrollView>
