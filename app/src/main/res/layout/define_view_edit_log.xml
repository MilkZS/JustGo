<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/define_view_log_img"
        android:layout_width="@dimen/log_dialog_img_height"
        android:layout_height="@dimen/log_dialog_img_width"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/define_view_log_name"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/log_name_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:textSize="15sp"
            android:layout_height="30dp"
            android:text="@string/design_label_log"/>

        <TextView
            android:id="@+id/define_view_log_arrive_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            tools:text="2018-12-02" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:textSize="15sp"
            android:layout_height="30dp"
            android:text="@string/design_label_log_leave"/>

        <TextView
            android:id="@+id/define_view_log_leave_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            tools:text="2018-12-02"/>

    </LinearLayout>
</LinearLayout>